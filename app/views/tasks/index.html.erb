<h1>タスク一覧</h1>

<table>
    <tr>
        <th>id</th>
        <th>タスク</th>
        <th>ステータス</th>
    </tr>
    <% @tasks.each do |task| %>    
        <tr>
            <td><%= link_to task.id, task %> : </td>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
        </tr>
    <% end %>
</table>

<%= link_to '新規タスクの登録', new_task_path %>